generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String    @unique
  password String
  name     String
  token    String?
  contacts Contact[]

  @@map("users")
}

model Contact {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  first_name String
  last_name  String
  email      String?
  phone      String?

  userId String @db.ObjectId 
  user   User   @relation(fields: [userId], references: [id])  

  addresses Address[]

  @@map("contacts")
}

model Address {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  street      String?
  city        String?
  province    String?
  country     String
  postal_code String

  contactId String  @db.ObjectId
  contact   Contact @relation(fields: [contactId], references: [id])

  @@map("addresses")
}

